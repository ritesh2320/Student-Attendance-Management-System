<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <%- include('../includes/masterIncludes.ejs')%>
    <title>Document</title>

    <script>
      let loggedInYear = <%- loggedInYear %>
      console.log(loggedInYear)
    </script>

    <script src="/assets/js/staff-dashboard-handler.js" defer></script>
  </head>
  <body>
    <div class="admin-navbar-container noprint">
      <div class="container">
        <div class="d-flex justify-content-between">
          <div class="d-flex gap-3">
            <button class="btn btn-outline-primary btn-sm add-att-btn">
              Attendance
            </button>
            <button class="btn btn-primary btn-sm std-list-btn">
              Students List
            </button>
            <button class="btn btn-primary btn-sm add-std-btn">
              Add Student
            </button>

            <button class="btn btn-success btn-sm sub-list-btn">
              Subjects List
            </button>
            <button class="btn btn-success btn-sm add-sub-btn">
              Add Subject
            </button>
          </div>
          <div class="d-flex gap-3 align-items-center">
            <div class="d-flex flex-column align-items-end">
              <h5 class="mb-0">
                Welcome, Admin <span class="admin-name"></span>
              </h5>
              <a class="btn btn-link m-0 p-0 text-danger" href="/logout"
                >Logout</a
              >
            </div>
            <div>
              <img
                src="/assets/images/profile.png"
                class="profile-img"
                alt=""
              />
            </div>
          </div>
        </div>
      </div>
    </div>

    <h3 class="text-center mt-4 noprint">Attendance Management System</h3>

    <!-- add attendance -->
    <div class="container add-att-container mt-5">
      <h3 class="my-4 noprint">Add Attendance</h3>

      <div class="row noprint">
        <div class="col-md-3">
          <label for="att-date">Date</label>
          <input
            type="date"
            id="att-date"
            class="form-control"
            value="05/01/2024"
          />
        </div>

        <div class="col-md-3">
          <label for="att-dept">Department</label>
          <select name="att-dept" class="form-control att-dept" id="att-dept">
            <option value="">-- Select Department --</option>
            <option value="civil">Civil</option>
            <option value="electrical">Electrical</option>
            <option value="mechanical">Mechanical</option>
            <option value="computer">Computer</option>
            <option value="it">I.T.</option>
          </select>
        </div>

        <div class="col-md-3">
          <label for="att-sub">Subject</label>
          <select name="att-sub" class="form-control" id="att-sub">
            <option value="">-- Select Subject --</option>
          </select>
        </div>

        <div class="col-md-3">
          <button class="mt-4 btn btn-success btn-sm" id="search-std-btn">
            Search Students
          </button>
          <button
            id="att-report-btn"
            class="ms-3 mt-4 btn btn-outline-info text-dark btn-sm add-sub-btn"
          >
            Attendance Report
          </button>
        </div>

        <div class="col-md-3"></div>

        <div
          class="d-flex justify-content-center already-filled-attendance-warning d-none"
        >
          <div class="mt-4 w-75 text-center alert alert-warning" role="alert">
            The attendance for this date has been already filled. Do you want to
            delete previous one?
            <button
              class="mx-3 btn btn-danger btn-sm delete-already-filled-attendance-btn"
            >
              <i class="fa-solid fa-trash"></i>
            </button>
          </div>
        </div>
      </div>

      <!-- add attendance form -->
      <form action="" id="add-att-form" class="noprint">
        <table class="table table-bordered table-striped mt-4">
          <thead>
            <tr class="text-center">
              <th>Sr No</th>
              <th>Student ID</th>
              <th>Name</th>
              <th>Present</th>
              <th>Absent</th>
            </tr>
          </thead>
          <tbody class="add-att-form-tbody">
            <tr class="text-center">
              <td colspan="5">Nothing But Crickets!!!</td>
            </tr>
          </tbody>
        </table>
        <button class="btn btn-sm btn-outline-primary">Submit</button>
      </form>
    </div>

    <div class="container att-report-print-table">
      <!-- attendance report table -->
      <div class="d-flex justify-content-between align-items-center noprint">
        <h4 class="mt-5">
          Attendance Report <span class="att-report-date"></span>
        </h4>
        <button class="btn btn-success btn-sm print-att-report-btn">
          <i class="fa-solid fa-print noprint"></i>
        </button>
      </div>

      <table class="table table-bordered table-striped mt-4">
        <thead>
          <tr class="text-center">
            <th>Sr No</th>
            <th>Student ID</th>
            <th>Name</th>
            <th>Attendance Percentge</th>
          </tr>
        </thead>
        <tbody class="att-report-tbody">
          <tr class="text-center">
            <td colspan="5">Nothing But Crickets!!!</td>
          </tr>
        </tbody>
      </table>
    </div>

    <!-- add student form -->
    <div class="container add-std-form mt-5 noprint">
      <h3 class="my-4">Add Student Form</h3>
      <form class="row" action="" id="add-student-form">
        <div class="col-md-3">
          <div class="my-3">
            <label for="" class="form-label">Student Name</label>
            <input
              type="text"
              class="form-control student-name"
              id=""
              name="student-name"
            />
          </div>
        </div>

        <div class="col-md-3">
          <div class="my-3">
            <label for="" class="form-label">Mobile Number</label>
            <input
              type="text"
              class="form-control mobile-no"
              id=""
              name="mobile"
            />
          </div>
        </div>

        <div class="col-md-3">
          <div class="my-3">
            <label for="" class="form-label">Department</label>
            <select name="department" class="form-control department" id="">
              <option value="civil">Civil</option>
              <option value="electrical">Electrical</option>
              <option value="mechanical">Mechanical</option>
              <option value="computer">Computer</option>
              <option value="it">I.T.</option>
            </select>
          </div>
        </div>

        <div class="col-md-3">
          <div class="my-3">
            <label for="" class="form-label">Year</label>
            <input name="year" id="" class="form-control year" readonly />
          </div>
        </div>

        <div class="col-md-6">
          <button type="submit" class="btn btn-outline-primary btn-sm">
            Submit
          </button>
          <button name="" type="reset" class="btn btn-link btn-sm text-danger">
            Reset
          </button>
        </div>
      </form>
    </div>

    <!-- students list -->
    <div class="container students-list mt-5 noprint">
      <h3 class="my-4">Students List</h3>
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="text-center">
            <th>Sr No</th>
            <th>Student ID</th>
            <th>Name</th>
            <th>Mobile</th>
            <th>Department</th>
            <th>Year</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="student-list-tbody"></tbody>
      </table>
    </div>

    <!-- add subject form -->
    <div class="container add-sub-form-container mt-5 noprint">
      <h3 class="my-4">Add New Subject</h3>
      <form class="row" action="" id="add-sub-form">
        <div class="col-md-4">
          <div class="my-3">
            <label for="" class="form-label">Subject Name</label>
            <input
              type="text"
              class="form-control sub-name"
              id=""
              name="sub-name"
            />
          </div>
        </div>

        <div class="col-md-4">
          <div class="my-3">
            <label for="sub-year" class="form-label">Year</label>
            <input
              type="text"
              id="sub-year"
              class="form-control sub-year"
              readonly
            />
          </div>
        </div>

        <div class="col-md-4">
          <div class="my-3">
            <label for="sub-department" class="form-label">Department</label>
            <select
              name="sub-department"
              class="form-control sub-department"
              id="sub-department"
            >
              <option value="civil">Civil</option>
              <option value="electrical">Electrical</option>
              <option value="mechanical">Mechanical</option>
              <option value="computer">Computer</option>
              <option value="it">I.T.</option>
            </select>
          </div>
        </div>

        <div class="col-md-4">
          <button type="submit" class="btn btn-outline-primary btn-sm">
            Submit
          </button>
          <button name="" type="reset" class="btn btn-link btn-sm text-danger">
            Reset
          </button>
        </div>
      </form>
    </div>

    <!-- subject list -->
    <div class="container sub-list-container mt-5 noprint">
      <h3 class="my-4">Subjects List</h3>
      <table class="table table-striped table-bordered">
        <thead>
          <tr class="text-center">
            <th>Sr No</th>
            <th>Name</th>
            <th>Department</th>
            <th>Year</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="sub-list-tbody"></tbody>
      </table>
    </div>
  </body>
</html>
